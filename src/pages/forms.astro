---
// Component Imports
import BaseHead from "../components/BaseHead.astro";
import BlogHeader from "../components/BlogHeader.astro";
import BlogPostPreview from "../components/BlogPostPreview.astro";
import Footer from "../components/Footer.astro";
import { SITE } from "../config";

// Component Script:
let { title } = SITE;
let description =
  "Reducing HIV vulnerability through peer education, raising of awareness, prevention and treatment in Limpopo and Mpumalanga, South Africa.";
let permalink = "https://www.hlokomela.org.za/";
---

<html lang="en">
  <head>
    <BaseHead {title} {description} {permalink} />

    <style></style>
  </head>

  <body>
    <BlogHeader />
    <div class="wrapper">
      <main class="content">
        <section class="intro">
          <h1 class="latest">{title}</h1>
          <p>{description}</p>
        </section>
        <div class="flex flex-col md:flex-row">
          <div class="bg-gray-300 md:w-1/2 lg:w-1/3 h-64 md:h-auto">test</div>
          <div class="bg-gray-500 md:w-1/2 lg:w-2/3 h-64 md:h-auto">
            <section aria-label="Blog post list"></section>
          </div>
        </div>
      </main>
      <Footer />
    </div>
  </body>
</html>
